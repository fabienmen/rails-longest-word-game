<h2>New game</h2>
<%@letters.each do |letter| %>
<button type="button" class="btn btn-primary mr-2"><%= letter %></button>
<% end %>

<form class="mt-3" action="/score" method="post" data-turbo="false">
  <input type="text" name="attempt" placeholder="What is your attempt?">
  <input type="submit" value="See your score!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
